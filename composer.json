{
    "name": "slim/slim-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Adriel Cardoso",
            "email": "adrielcardoso99@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "doctrine/orm": "*",
        "symfony/finder": "^3.1",
        "symfony/serializer": "^3.1",
        "symfony/property-access": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "src\\" : "src/",
            "Tests\\": "tests/",
            "Entity\\" : "src/Entity/",
            "Service\\" : "src/Service/",
            "Config\\" : "src/config/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
